!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %link{:href => "../assets/img/apple-icon.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "../assets/img/favicon.png", :rel => "icon", :sizes => "96x96", :type => "image/png"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    = csrf_meta_tags
    / Fonts and icons
    %link{:href => "https://fonts.googleapis.com/css?family=Bree+Serif|Lato:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "/assets/pe-icon-7-stroke.css", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-ct-red.navbar-top{:role => "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#navbar-example", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Pytania
        / Collect the nav links, forms, and other content for toggling
        = render 'courses/progress'

    = render 'shared/flash_messages'

    .section.section-signin
      .image-container
        .filter.filter-color-black{:style => "background-image: url(https://s3.amazonaws.com/upload.uxpin/files/575648/572354/NOWY_slider_zdjecie1-1.jpg)"}
          .col-md-8.col-md-offset-1
            .content
              = yield :left_side
      .form-container
        .col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
          = yield :right_side
