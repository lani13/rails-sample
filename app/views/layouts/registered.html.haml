!!!
%html{:lang => "pl"}
  %head
    %meta{:charset => "utf-8"}/
    %link{:href => "../assets/img/apple-icon.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "../assets/img/favicon.png", :rel => "icon", :sizes => "96x96", :type => "image/png"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    = csrf_meta_tags
    /
      <link href="../assets/css/bootstrap.css" rel="stylesheet" />
      <link href="../assets/css/gaia.css" rel="stylesheet"/>
    / Fonts and icons
    %link{:href => "https://fonts.googleapis.com/css?family=Bree+Serif|Lato:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "/assets/pe-icon-7-stroke.css", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-default.navbar-transparent.navbar-fixed-top
      / if you want to keep the navbar hidden you can add this class to the navbar "navbar-burger"
      .container
        .navbar-header
          %button#menu-toggle.navbar-toggle{"data-target" => "#example", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Menu
            %span.icon-bar.bar1
            %span.icon-bar.bar2
            %span.icon-bar.bar3
          %a.navbar-brand{:href => "/"}
            Kurs HMS
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right.navbar-uppercase
            %li
              - if user_logged?
                = link_to t('.logout'), account_logout_path
              - else
                = link_to t('.login'), account_login_path

    = render 'shared/flash_messages'

    .section.section-pricing
      .parallax.filter.filter-color-black
        .image{style: "background-image: url(#{asset_path 'https://s3.amazonaws.com/upload.uxpin/files/575648/572354/NOWY_slider_zdjecie3-1.jpg'})"}
        .container
          .content
            .row
              = yield # <!--

    %footer.footer.footer-big.footer-color-black{"data-color" => "black"}
      .container
        .row
          .col-md-offset-3.col-md-3.col-sm-3
            .info
              %h5.title Zobacz także
              %nav
                %ul
                  %li
                    %a{:href => "#"} O nas
                  %li
                    %a{:href => "#"} Nasze szkolenia
                  %li
                    %a{:href => "#"} Kontakt
                  %li
                    %a{:href => "#"} Polityka prywarności
                  %li
                    %a{:href => "#"} Regulamin
          .col-md-3.col-sm-3
            .info
              %h5.title Kursy
              %nav
                %ul
                  %li
                    %a{:href => "#"} DAGLING LEDER
                  %li
                    %a{:href => "#"} VERNEOMBUD
                  %li
                    %a{:href => "#"} GENERLELT
        %hr/
        .copyright
          © #{DateTime.now.year} Novum Consulting
