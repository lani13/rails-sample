!!!
%html{:lang => "pl"}
  %head
    %meta{:charset => "utf-8"}/
    %link{:href => "../assets/img/apple-icon.png", :rel => "apple-touch-icon", :sizes => "76x76"}/
    %link{:href => "../assets/img/favicon.png", :rel => "icon", :sizes => "96x96", :type => "image/png"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}/
    = csrf_meta_tags
    /
      <link href="../assets/css/bootstrap.css" rel="stylesheet" />
      <link href="../assets/css/gaia.css" rel="stylesheet"/>
    / Fonts and icons
    %link{:href => "https://fonts.googleapis.com/css?family=Bree+Serif|Lato:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css", :rel => "stylesheet"}/
    %link{:href => "/assets/pe-icon-7-stroke.css", :rel => "stylesheet"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    / Modal
    #noCommingSoonModal.modal.fade{:role => "dialog"}
      .modal-dialog
        / Modal content
        .modal-content
          .modal-body
            %p Kommer snart.
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} X
    #enCommingSoonModal.modal.fade{:role => "dialog"}
      .modal-dialog
        / Modal content
        .modal-content
          .modal-body
            %p Comming soon.
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} X
    %nav.navbar.navbar-default.navbar-transparent.navbar-fixed-top{"color-on-scroll" => "50"}
      / if you want to keep the navbar hidden you can add this class to the navbar "navbar-burger"
      .container
        .navbar-header
          %button#menu-toggle.navbar-toggle{"data-target" => "#example", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Menu
            %span.icon-bar.bar1
            %span.icon-bar.bar2
            %span.icon-bar.bar3
          %a.navbar-brand{:href => "/"}
            Kurs HMS
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right.navbar-uppercase
            %li.active
              %a PL
            %li
              %a{"data-target" => "#enCommingSoonModal", "data-toggle" => "modal", :href => "#en"} EN
            %li
              %a{"data-target" => "#noCommingSoonModal", "data-toggle" => "modal", :href => "#no"} NO

    = render 'shared/flash_messages'

    = yield # <!--

    %footer.footer.footer-big.footer-color-black{"data-color" => "black"}
      .container
        .row
          .col-md-offset-3.col-md-3.col-sm-3
            .info
              %h5.title Zobacz także
              %nav
                %ul
                  %li
                    %a{:href => "#"} O nas
                  %li
                    %a{:href => "#"} Nasze szkolenia
                  %li
                    %a{:href => "#"} Kontakt
                  %li
                    %a{:href => "#"} Polityka prywarności
                  %li
                    %a{:href => "#"} Regulamin
          .col-md-3.col-sm-3
            .info
              %h5.title Kursy
              %nav
                %ul
                  %li
                    %a{:href => "#"} Kurs 1
                  %li
                    %a{:href => "#"} Kurs 2
                  %li
                    %a{:href => "#"} Kurs 3
        %hr
        .copyright
          © #{DateTime.now.year}
    <script src="/assets/gaia/jquery.min.js" type="text/javascript"></script>
    <script src="/assets/gaia/bootstrap.js" type="text/javascript"></script>

