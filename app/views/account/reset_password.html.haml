
.row
  .col-md-4.col-md-offset-4
    %h2
      = t('.reset_password')

    = form_for :user, url: {action: 'reset_password'}, html: {class: 'form'} do |f|
      %div
        = f.label :email
        = f.text_field :email, class: 'form-control'
      %div
        = f.submit t('.reset'), class: "btn btn-info btn-fill"
