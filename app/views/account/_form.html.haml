= form_for @user, url: {action: "create"}, html: {class: "form"} do |f|
  = render 'shared/error_messages', model: @user
  %div
    = f.label :first_name
    = f.text_field :first_name, class: 'form-control'
  %div
    = f.label :last_name
    = f.text_field :last_name, class: 'form-control'
  %div
    = f.label :birth_day
    = f.text_field :birth_day, class: 'form-control'
  %div
    = f.label :email
    = f.text_field :email, class: 'form-control'
  %div
    = f.submit t('.create'), class: "btn btn-info btn-fill"
